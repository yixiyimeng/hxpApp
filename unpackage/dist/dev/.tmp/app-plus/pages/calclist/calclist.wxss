.pageview {
  height: 100vh;
  background: #F5F5F5;
}
.top-warp {
  z-index: 999;
  position: fixed;
  top: --window-top;
  /* css变量 */
  left: 0;
  width: 100%;
  background-color: white;
  -webkit-box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.05);
          box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.05);
  font-size: 28rpx;
  color: #2C2C2C;
  padding: 0 30rpx 20rpx;
}
.top-warp .price {
    color: #19A967;
    font-size: 36rpx;
}
.top-warp .picker {
    width: 210rpx;
    height: 70rpx;
    border: 1px solid #9D9D9D;
    border-radius: 8rpx;
    text-align: center;
    line-height: 70rpx;
}
.list .item {
  font-size: 26rpx;
  color: #919191;
  padding: 28rpx 30rpx;
  background: #fff;
}
.list .item .title {
    color: #0E0B0E;
    font-size: 32rpx;
}
.list .item .price {
    color: #0E0B0E;
    font-size: 38rpx;
}
.list .item:nth-child(even) {
    background: #F9F9F9;
}
.filterbar {
  padding: 35rpx 30rpx 40rpx;
}
.filterbar .title {
    color: #2F2F2F;
    font-size: 30rpx;
}
.filterbar .inputbox {
    height: 70rpx;
    line-height: 70rpx;
    border: 1px solid #9D9D9D;
    border-radius: 8rpx;
    padding: 0 18rpx;
}
.filterbar .inputbox image {
      width: 28rpx;
}
.filterbar .line {
    width: 18rpx;
    background: #E3E3E3;
    height: 3rpx;
    margin: 0 10rpx;
}
.filterbar .searchBtn {
    width: 600rpx;
    height: 100rpx;
    background: #19a967;
    -webkit-box-shadow: 0px 9rpx 27rpx 0px rgba(25, 169, 103, 0.58);
