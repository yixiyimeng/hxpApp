.top-warp {
  z-index: 999;
  position: fixed;
  top: --window-top;
  /* css变量 */
  left: 0;
  width: 100%;
  background-color: white;
}
.main .cate-item {
  margin: 20rpx 30rpx;
}
.topbar {
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #EAEAEA;
  -webkit-mask: -webkit-gradient(linear, left top, right bottom, from(black), color-stop(0.75, #fff), to(transparent));
}
.topbar .scrollview {
    line-height: 80rpx;
    color: #A5A5A5;
    font-size: 30rpx;
}
.topbar .scrollview ._span {
      position: relative;
      display: inline-block;
}
.topbar .scrollview ._span + ._span {
        margin-left: 65rpx;
}
.topbar .scrollview ._span.active {
        color: #19A967;
}
.topbar .scrollview ._span.active:after {
        content: '';
        background: #19A967;
        display: block;
        height: 5rpx;
        width: 35rpx;
        position: absolute;
        bottom: 1rpx;
        left: 50%;
        -webkit-transform: translateX(-50%);
            -ms-transform: translateX(-50%);
                transform: translateX(-50%);
}
.tabbar {
  border-top: 1px solid #F1F1F1;
