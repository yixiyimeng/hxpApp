.splash {
  position: relative;
  height: 100%;
  line-height: 1.8;
  padding-top: 180rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.splash > ._div {
    position: relative;
    z-index: 1;
}
.bg1 {
  position: absolute;
  top: 0;
  right: 0;
  width: 434rpx;
}
.bg2 {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 446rpx;
  z-index: 0;
}
.clock {
  width: 143rpx;
  height: 143rpx;
  display: block;
  margin: 0 auto;
}
.title {
  text-align: center;
  color: #ff554b;
  font-size: 40rpx;
}
.subtitle {
  text-align: center;
  color: #ff9ca3;
  font-size: 26rpx;
}
.time {
  border-radius: 5px;
  -webkit-box-shadow: 0 0 10px rgba(251, 117, 59, 0.5);
          box-shadow: 0 0 10px rgba(251, 117, 59, 0.5);
  width: 80%;
  background: #fff;
  margin: 30rpx auto 0;
  color: #ff554b;
  padding: 20rpx 40rpx 30rpx;
  position: relative;
}
.time ._ul ._li ._span:last-child {
  color: #414141;
}
.time ._div {
  text-align: center;
  font-size: 44rpx;
  padding-top: 40rpx;
}
.time image {
  position: absolute;
  width: 132rpx;
  height: 88rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
      -ms-transform: translateX(-50%);
          transform: translateX(-50%);
}
.btn {
  color: #fff;
  background: #fb753b;
  border-radius: 50rpx;
  width: 70%;
  margin: 45rpx auto;
  line-height: 92rpx;
  text-align: center;
  font-size: 30rpx;
}

