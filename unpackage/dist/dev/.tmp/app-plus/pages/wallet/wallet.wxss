page {
  height: 100%;
  background: #fff;
}
.bg {
  width: 100%;
  position: absolute;
  z-index: 0;
  top: 0;
}
.main {
  position: relative;
  z-index: 999;
}
.walletinfo {
  position: relative;
  text-align: center;
  color: #585858;
  font-size: 28rpx;
  background: #fff;
  -webkit-box-shadow: 0 2rpx 6rpx 0px rgba(26, 170, 104, 0.27);
          box-shadow: 0 2rpx 6rpx 0px rgba(26, 170, 104, 0.27);
  border-radius: 12rpx;
  margin: 30rpx;
  padding: 50rpx 0;
}
.walletinfo .price {
    color: #2E302F;
    font-size: 56rpx;
    margin-top: 27rpx;
}
.walletinfo .link {
    position: absolute;
    display: block;
    color: #989898;
    font-size: 26rpx;
    width: 145rpx;
    line-height: 55rpx;
    background: #efefef;
    border-radius: 28rpx;
    top: 24rpx;
    right: 24rpx;
}
.walletinfo .nav {
    color: #848484;
    font-size: 26rpx;
    margin-top: 65rpx;
}
.walletinfo .nav .price {
      font-size: 50rpx;
      margin-top: 20rpx;
}
.walletinfo .nav .line {
      width: 2rpx;
      height: 100rpx;
      background: #EDEDED;
      display: block;
}
.walletinfo .btn {
    width: 580rpx;
    line-height: 100rpx;
    background: #19a967;
    -webkit-box-shadow: 0px 9rpx 27rpx 0px rgba(25, 169, 103, 0.58);
            box-shadow: 0px 9rpx 27rpx 0px rgba(25, 169, 103, 0.58);
    border-radius: 12rpx;
    margin: 47rpx auto 0;
    color: #fff;
    font-size: 30rpx;
}
.list {
  margin: 0 30rpx;
}
.list > view {
    padding: 32rpx 0;
    font-size: 30rpx;
    color: #333;
    border-bottom: 1px solid #EAEAEA;
}
.list > view .price {
      color: #C2C2C2;
      font-size: 36rpx;
}

